<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>NK-Enterprise</title>
  <link rel="shortcut icon" type="image/png" href="https://jakirsoftware.github.io/Js-iT/Js-iT.png" />
  <style>
    html, body {
      margin: 0;
      padding: 0;
      height: 100%;
      overflow: hidden;
      font-family: sans-serif;
    }

    iframe {
      width: 100%;
      height: 100%;
      border: none;
      display: none;
    }

    #loader {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: white;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 9999;
    }

    #loader img {
      width: 500px;
      height: auto;
    }

    .button-container {
      position: fixed;
      top: 20px;
      right: 30px;
      display: flex;
      flex-direction: column;
      gap: 15px;
      z-index: 10000;
    }

    .button {
      background: rgba(0, 0, 0, 0.7);
      color: white;
      padding: 3px 6px;
      border: none;
      cursor: pointer;
      font-size: 15px;
      border-radius: 5px;
    }

    .button:hover {
      background: rgba(0, 0, 0, 0.9);
    }

    .button-hidden {
      display: none;
    }
  </style>
</head>
<body>

  <!-- Loader -->
  <div id="loader">
    <img src="https://raw.githubusercontent.com/jakirsoftware/file/refs/heads/main/load.gif" alt="Loading..." />
  </div>

  <!-- Buttons -->
  <div class="button-container">
    <button class="button" onclick="toggleButtons()">☰</button>
    <button id="b1" class="button button-hidden" onclick="loadHome()">Home</button>
    <button id="b2" class="button button-hidden" onclick="f2()">Court App</button>
    <button id="b3" class="button button-hidden" onclick="f3()">Transport</button>
    <button id="b4" class="button button-hidden" onclick="f4()">Shop1</button>
  </div>

  <!-- Iframe -->
  <iframe
    id="iframe"
    allow="camera; microphone; clipboard-read; clipboard-write; geolocation; display-capture"
    sandbox="allow-scripts allow-same-origin allow-forms allow-popups allow-modals allow-presentation allow-downloads">
  </iframe>

  <!-- Script -->
  <script>
    const linkHome = "https://script.google.com/macros/s/AKfycbxUQcOY0Qah3loE5dsEgSzdfUsZCjDkmvnETKMKH5Gwpvi1u9sr4CMuZkG-Tr5t-XQh/exec?id=3";
    const linkF2   = "https://script.google.com/macros/s/AKfycbxUQcOY0Qah3loE5dsEgSzdfUsZCjDkmvnETKMKH5Gwpvi1u9sr4CMuZkG-Tr5t-XQh/exec?id=2";
    const linkF3   = "https://script.google.com/macros/s/AKfycbxUQcOY0Qah3loE5dsEgSzdfUsZCjDkmvnETKMKH5Gwpvi1u9sr4CMuZkG-Tr5t-XQh/exec?id=5";
    const linkF4   = "https://script.google.com/macros/s/AKfycbxUQcOY0Qah3loE5dsEgSzdfUsZCjDkmvnETKMKH5Gwpvi1u9sr4CMuZkG-Tr5t-XQh/exec?id=6";

    let urlHome = "";
    let buttonsVisible = false;

    function toggleButtons() {
      buttonsVisible = !buttonsVisible;
      const buttons = document.querySelectorAll('.button-hidden');
      buttons.forEach(button => {
        button.style.display = buttonsVisible ? 'block' : 'none';
      });

      if (buttonsVisible) {
        setTimeout(() => {
          if (buttonsVisible) hideButtons();
        }, 15000);
      }
    }

    function hideButtons() {
      buttonsVisible = false;
      document.querySelectorAll('.button-hidden').forEach(button => {
        button.style.display = 'none';
      });
    }

    function loadIframe(url, titleText) {
      const iframe = document.getElementById('iframe');
      const loader = document.getElementById('loader');
      document.title = titleText;
      loader.style.display = 'flex';
      iframe.style.display = 'none';
      iframe.src = url;
      iframe.onload = () => {
        loader.style.display = 'none';
        iframe.style.display = 'block';
        allowTextSelection(iframe);
      };
    }

    function allowTextSelection(iframe) {
      try {
        const iframeDocument = iframe.contentWindow.document;
        const style = iframeDocument.createElement('style');
        style.innerHTML = 'body { user-select: text !important; }';
        iframeDocument.head.appendChild(style);
      } catch (err) {
        console.warn("Could not apply text selection inside iframe:", err);
      }
    }

    function loadHome() {
      hideButtons();
      loadIframe(urlHome, "Home");
    }

    function f2() {
      hideButtons();
      fetch(linkF2)
        .then(response => response.text())
        .then(finalUrl => loadIframe(finalUrl.trim(), "Court App"))
        .catch(err => {
          document.body.innerHTML = "❌ Error loading Court App: " + err;
        });
    }

    function f3() {
      hideButtons();
      fetch(linkF3)
        .then(response => response.text())
        .then(finalUrl => loadIframe(finalUrl.trim(), "Transport"))
        .catch(err => {
          document.body.innerHTML = "❌ Error loading Transport: " + err;
        });
    }

    function f4() {
      hideButtons();
      fetch(linkF4)
        .then(response => response.text())
        .then(finalUrl => loadIframe(finalUrl.trim(), "Shop1"))
        .catch(err => {
          document.body.innerHTML = "❌ Error loading Shop1: " + err;
        });
    }

    window.onload = () => {
      fetch(linkHome)
        .then(response => response.text())
        .then(finalUrl => {
          urlHome = finalUrl.trim();
          loadIframe(urlHome, "Home");
        })
        .catch(err => {
          document.body.innerHTML = "❌ Error loading iframe: " + err;
        });
    };
  </script>
</body>
</html>
